<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="jumbotron">
        <center><span class="logo">File<strong>Box</strong></span>
        <h2>Log in</h2></center>

        <%= simple_form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
          <div class="form-group">
            <%= f.input :email, required: false, autofocus: true, :wrapper => false, :input_html => {:class => "form-control"} %>
          </div>
          <div class="form-group">
            <%= f.input :password, required: false, :wrapper => false, :input_html => {:class => "form-control"} %>
          </div>
          <div class="checkbox">
            <%= f.input :remember_me, :wrapper => false, :input_html => {:style => "margin-left: 0px;" }, as: :boolean if Devise.mappings[:user] %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", :wrapper => false, :class => "btn btn-default" %>
          </div>
        <% end %>

        <%#= render "devise/shared/links" %>
        <%= link_to "Sign up", new_registration_path(:user) %>
      </div>
    </div>
  </div>
</div>

<style>
.logo {
  border: 2px #779ECB solid;
  border-radius: 5px;
  padding: 5px 15px 5px 15px;
  font-family: "Helvetica";
  font-size: 47px;
  color: #777;
}

.logo:hover {
background-color: #e7eEfB;
}

.logo strong{
color: #779ECB;
font-weight: normal;
}
</style>