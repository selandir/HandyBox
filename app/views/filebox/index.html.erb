    <li><i class="fa-li fa fa-square"></i>API</li>

  </ul>
  </div>  
</div> <!-- /container -->


<style>

.todo {
    padding: 5px;
    border-radius: 5px;
    height: 500px;
    width: 300px;
    position:absolute;
    top:20%;
    left:-270px;
    border: 3px #dadada solid;
    transition: left ease 0.5s, transform 0.5s;
    background-color: #f5f5f5;
}

.todo:hover {
  left: -2%;
  transform: rotate(12deg);
}
.hover{
  margin-left: 10px;
  padding: 5px;
  background-color: #F6F6F6;
  border-radius: 5px;
}
.hover:hover {
  background-color: #F0F0F0;
}
.logo {
  border: 2px #779ECB solid;
  border-radius: 5px;
  padding: 5px 15px 5px 15px;
  font-family: "Helvetica";
  font-size: 47px;
  color: #777;
}

.logo:hover {
background-color: #e7eEfB;
}

.logo strong{
color: #779ECB;
font-weight: normal;
}

.filebox-container {
  border-radius: 2px;
  padding: 0px 0px 0px 0px;
  border: 0px black solid;
  width: 100%;
  height: 40px;
  margin: 2px 0px 2px 0px;
}

.filebox-title {
  border-radius: 10px 10px 0px 0px;
  border-bottom: 2px #ddd solid;
  padding: 5px 5px 5px 5px;
  width: 100%;
}

.filebox-footer {
  border-radius: 0px 0px 10px 10px;
  border-top: 2px #ddd solid;
  padding: 5px 5px 5px 5px;
  width: 100%;
}

.filebox-container a {
  color: inherit;
}

.filebox-container a:hover {
  color: #779ECB;
  text-decoration: none;
}

.filebox-container:nth-child(even) {
  background-color: #F6F6F6;
}

.filebox-container:nth-child(odd) {
  background-color: #FAFAFA;
}

.filebox-container:hover {
background-color: #e7eEfB;
}

.filebox-container .name {
padding: 10px 0px 0px 10px;
border: 0px black solid;
height: 100%  ;
width: 70%;
float: left;
}

.filebox-container .name-item {
padding: 10px 0px 0px 20px;
border: 0px black solid;
height: 100%  ;
width: 70%;
float: left;
}

.filebox-container .options {
padding: 10px 0px 0px 10px;
border: 0px black solid;
height: 100%  ;
width: 18%;
float: left;
}

.filebox-container .size {
padding: 10px 0px 0px 10px;
border: 0px black solid;
height: 100%  ;
width: 10%;
float: left;
}

</style>

